@model PartyInvites.Models.GuestResponse

@{
    Layout = null;
}

<!DOCTYPE html>

<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="~/css/style.css" />
    <link rel="stylesheet" href="/lib/bootstrap/dist/css/bootstrap.css"/>
    <title>RSVP</title>
</head>
<body>
    <div class="panel panel-success">
        <div class="panel-heading text-center"><h4>RSVP</h4></div>
        <div class="panel-body">
            <form class="p-a-1" asp-action="RsvpForm" method="post">
                <!--Added summary of validation-->
                <div asp-validation-summary="All"></div>
                    <div class="form-group">
                        <label asp-for="Name">First name and last name:</label>
                        <input class="form-control" asp-for="Name"/>
                    </div>
                    <div class="form-group">
                        <label asp-for="Nickname">Your Master of the Universe Nickname</label>
                        <input class="form-control" asp-for="Nickname"/>
                    </div>
                    <div class="form-group">
                        <label asp-for="Email">Email Address:</label>
                        <input class="form-control" asp-for="Email"/>
                    </div>
                    <div class="form-group">
                        <label asp-for="Phone">Phone number</label>
                        <input class="form-control" asp-for="Phone"/>
                    </div>
                <div class="form-group">
                    <label>Will you come to the Party for The Masters of The Universe?</label>
                    <select class="form-control" asp-for="WillAttend">
                        <option value="">Choose your destiny</option>
                        <option value="true">Yas, I am truly Master of The Universe and I will come</option>
                        <option value="false">Nope, I am random looser so I will not come to the Party</option>
                    </select>
                </div>
                <div class="text-center">
                    <button class="btn btn-primary" type="submit">
                        Send RSVP
                    </button>
                </div>
            </form>
        </div>
    </div>
</body>
</html>